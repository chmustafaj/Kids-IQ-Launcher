<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.timeLimit.subFeatures.InputMonitoring"
    android:background="@color/white">

    <ImageView
        android:id="@+id/exitInputMonitoring"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/exit"
        app:tint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/txtHeading"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Timer stops after last input"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeading"
        android:layout_marginStart="20dp"
        android:text="Screen"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtHeading"
        android:layout_marginEnd="40dp"
        android:id="@+id/txtTimeScreen" />

    <TextView
        android:id="@+id/txtKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtScreen"
        android:layout_marginStart="20dp"
        android:text="Keyboard"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtScreen"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtTimeKeyboard" />


</RelativeLayout>